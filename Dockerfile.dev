# syntax=docker/dockerfile:1
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# System deps: ffmpeg for PyAV; libgomp1 for onnxruntime; portaudio for sounddevice
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg ca-certificates libgomp1 libportaudio2 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy the main.py file
COPY main.py ./

# Development mode: run with 'dev' command for hot-reload/debugging
# This enables development features like auto-reload and better error messages
CMD ["python", "main.py", "dev"]

